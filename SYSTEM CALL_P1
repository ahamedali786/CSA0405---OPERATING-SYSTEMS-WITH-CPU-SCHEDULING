#include <stdio.h>
#include <unistd.h>  
#include <sys/types.h>
#include <sys/wait.h> 
int main() {
    pid_t pid;
    pid = fork();

    if (pid < 0) {
        perror("fork failed");
        return 1;
    } 
    else if (pid == 0) {
        
        printf("---- Child Process ----\n");
        printf("Child PID  : %d\n", getpid());
        printf("Parent PID : %d\n", getppid());
    } 
    else {
        // Parent process
        printf("---- Parent Process ----\n");
        printf("Parent PID : %d\n", getpid());
        printf("Child PID  : %d\n", pid);

        wait(NULL);
    }

    return 0;
}
OUTPUT:
---- Parent Process ----
Parent PID : 5123
Child PID  : 5124
---- Child Process ----
Child PID  : 5124
Parent PID : 5123
